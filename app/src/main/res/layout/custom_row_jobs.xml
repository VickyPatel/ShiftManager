<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jobs_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/custom_bottom_border"
    >

    <TextView
        android:id="@+id/company_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryText"
        android:text="Company Name"/>

    <TextView
        android:id="@+id/position_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="6dp"
        android:layout_below="@+id/company_name_text"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Position"
        android:textColor="@color/colorSecondaryText"/>

    <LinearLayout
        android:id="@+id/layout_unpaid_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/position_text"
        >
        <TextView
            android:id="@+id/text_unpaid_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="Unpaid Hours : "/>

        <TextView
            android:id="@+id/text_total_unpaid_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="12"
            android:textColor="@color/colorPrimaryText"/>

    </LinearLayout>


    <TextView
        android:id="@+id/next_shift_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday, 01 Oct 2015"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:textSize="12sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/select_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_select"
        android:visibility="gone"/>


</RelativeLayout>